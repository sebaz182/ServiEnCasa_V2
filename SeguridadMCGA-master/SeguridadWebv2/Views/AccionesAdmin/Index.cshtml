@model IEnumerable<SeguridadWebv2.Models.ApplicationRole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Listado de Permisos / Acciones</h2>
<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Agregar_Permiso")) {
        @Html.ActionLink("Agregar Permiso/Acción", "Agregar")
    }
</p>
<div class="row">
    <table class="table table-striped table-condensed">
        <thead>
        <tr>
            <th>Nombre Acción/Permiso</th>
            <th>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center">
                    @if (User.IsInRole("Admin") || User.IsInRole("Detalles_Permiso")) {
                    <a href="@Url.Action("Detalles", "AccionesAdmin", new { id = item.Id })" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-pencil"></span> Detalle</a>}
                    @if (User.IsInRole("Admin") || User.IsInRole("Editar_Permiso")) {
                    <a href="@Url.Action("Editar", "AccionesAdmin", new { id = item.Id })" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Editar</a>}                                                                                                                                                       
                    @if (User.IsInRole("Admin") || User.IsInRole("Eliminar_Permiso")) {
                    <a href="@Url.Action("Eliminar", "AccionesAdmin", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Eliminar</a>}
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
