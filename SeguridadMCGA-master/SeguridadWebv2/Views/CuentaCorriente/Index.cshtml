@model IEnumerable<SeguridadWebv2.Models.App.CuentaCorriente>
@{
    ViewBag.Title = "Cuenta Corriente";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Cuenta Corriente</h2>
        @*<p>Contextual classes can be used to color table rows or table cells. The classes that can be used are: .active, .success, .info, .warning, and .danger.</p>*@
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Movimiento</th>
                    <th>Debito</th>
                    <th>Credito</th>
                </tr>
            </thead>
            @{ decimal? saldo = 0;}
            <tbody>
                @foreach (var m in Model)
                {
                    if (m.Credito == 0)
                    {
                        <tr class="danger">
                            <td>@m.Fecha.ToShortDateString()</td>
                            <td>@m.Detalle</td>
                            <td>@m.Debito</td>
                            <td>@m.Credito</td>
                        </tr>
                        saldo = saldo - m.Debito;
                    }

                    else
                    {
                        <tr class="success">
                            <td>@m.Fecha.ToShortDateString()</td>
                            <td>@m.Detalle</td>
                            <td>@m.Debito</td>
                            <td>@m.Credito</td>
                        </tr>
                        saldo = saldo + m.Credito;
                    }
                }
            </tbody>
        </table>
        <h1>Saldo = $ @saldo</h1>
        <div>
            <a mp-mode="dftl" href="https://www.mercadopago.com/mla/checkout/start?pref_id=90955-94b1e79d-ad67-4016-b313-e33f4456566c" name="MP-payButton" class='blue-ar-l-rn-none'>Pagar</a>
            <script type="text/javascript">
(function(){function $MPC_load(){window.$MPC_loaded !== true && (function(){var s = document.createElement("script");s.type = "text/javascript";s.async = true;s.src = document.location.protocol+"//secure.mlstatic.com/mptools/render.js";var x = document.getElementsByTagName('script')[0];x.parentNode.insertBefore(s, x);window.$MPC_loaded = true;})();}window.$MPC_loaded !== true ? (window.attachEvent ?window.attachEvent('onload', $MPC_load) : window.addEventListener('load', $MPC_load, false)) : null;})();
            </script>
        </div>
    </div>

</body>
</html>

