@model SeguridadWebv2.Models.GrupoViewModel

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Editar</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ApplicationGroup</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-bookmark-o">
                    </span>
                </span>
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-check-square-o">
                    </span>
                </span>
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Permisos / Acciones", new { @class = "control-label col-md-2" })
            <span class="col-md-6">
                @foreach (var item in Model.RolesList)
                {
                    <div>
                        <input type="checkbox" name="selectedRoles" value="@item.Text" checked="@item.Selected" class="checkbox-inline" />
                        @Html.Label(item.Text, new { @class = "control-label" })
                    </div>
                }
            </span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




