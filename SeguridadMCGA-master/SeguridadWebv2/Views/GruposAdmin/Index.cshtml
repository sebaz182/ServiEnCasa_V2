@model IEnumerable<SeguridadWebv2.Models.ApplicationGroup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<h2>Listado de Grupos</h2>
<p>
    @Html.ActionLink("Agregar Grupo", "Agregar")
</p>
<div class="row">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td class="text-center">
                        @if (User.IsInRole("Admin") || User.IsInRole("Detalle_Grupo"))
                        {<a href="@Url.Action("Detalles", "GruposAdmin", new { id = item.Id })" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-pencil"></span> Detalle</a>}
                        @if (User.IsInRole("Admin") || User.IsInRole("Editar_Grupo"))
                        {<a href="@Url.Action("Editar", "GruposAdmin", new { id = item.Id })" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Editar</a>}
                        @if (User.IsInRole("Admin") || User.IsInRole("Eliminar_Grupo"))
                        {<a href="@Url.Action("Eliminar", "GruposAdmin", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Eliminar</a>}
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>